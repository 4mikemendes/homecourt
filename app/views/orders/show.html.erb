<div class="container">
  <div class="row py-4">
    <div class="col">
      <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
        <li><strong>TENNIS COURT</strong> <%= @order.tennis_court.court_name %> [<%= @order.tennis_court_sku %>]</li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount / 100 %></li>
        </li>
      </ul>
    </div>
  </div>
</div>

